* {
    padding: 0;
    margin: 0;
}
body{
    background-color:#dedede;
	font-family: "\5FAE\8F6F\96C5\9ED1";
}
.mainheader{
    background-color: #F08080;
    height: 70px;
}
.mainHeader img {
    width: 80px;
    height: 80px;
    padding-left: 50px;
    padding-top: 15px;
}
.mainNav {
    float: right;
}
.mainNav li {
    float: left;
    width: 100px;
    line-height: 70px;
}
.mainNav a {
    text-decoration: none;
    color: #e8ecef;
}
.mainNav a:visited {
    color: #a8a6a7;
}

.pic, article, aside {
    background-color: #FFFFFF;
    margin: 20px;
    padding: 30px;
}

.artImg {
    padding: 20px 0;
}